---
import BaseLayout from "./BaseLayout.astro";
import 'katex/dist/katex.css';
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>

    <div class="post-content-container">
        <div class="info">

            <span><i><b>Written by {frontmatter.author}</b> | Published on: {frontmatter.pubDate.toString().slice(0, 10)}</i></span>

        </div>

        <div class="tags">

            {frontmatter.tags.map((tag: string) => 
                <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
            )}

        </div>

        <slot />

    </div>

</BaseLayout>

<style is:global>

    a {

        color: #00539F;

    }

    .tags {
        
        display: flex;
        flex-wrap: wrap;

    }

    .tag {

        margin: 0.25em;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;
        background-color: #F8FCFD;

    }

    .banner {

        padding: 5px;
        width: 100%;
        height: 100%;
        overflow: hidden;

    }

    .banner .banner-img {

        position: absolute;
        top: 0;
        left: 0;

        z-index: -2;
        width: 100%;
        height: 100%;


    }

    .title {

        margin-top: 0;

    }

    .post-content-container {

        padding: 4em 5em 0em 5em;

    }

</style>