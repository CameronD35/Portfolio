---
const { frontmatter } = Astro.props;
---
<style is:global>

.banner {

    padding: 5px;
    width: 100%;
    height: 100%;
    overflow: hidden;

}

.banner .banner-img {

    position: absolute;
    top: 0;
    left: 0;

    z-index: -2;
    width: 100%;
    height: 100%;


}

.title {

    margin-top: 0;

}


</style>
<meta charset="utf-8" />

<div class="banner" data-url={frontmatter.image.url}>

    <div class="info">
        <h1 class="title">{frontmatter.title}</h1>
        <span><i><b>Written by {frontmatter.author}</b> | Published on: {frontmatter.pubDate.toString().slice(0, 10)}</i></span>
    </div>    

    <!-- <img class="banner-img"src={frontmatter.image.url} alt={frontmatter.image.alt} /> -->

</div>
<slot />