---
import "../styles/global.css"
interface Props {

    height: string;
    bgImg?: any;
    className?: string;
    color?: string;

}

const { height, bgImg, className, color } = Astro.props;

let styleString;
let classString;

console.log(color);

if (bgImg) { styleString = `background-image: url(${bgImg.src})`; }
else { styleString = `background-color: ${color}`}

if (className) { classString = `section ${className}` }
else {classString = `section`}

---

<div class=`${classString}` style=`${styleString}`>

    <slot/>

</div>

<style define:vars={{ height }}>

    .section {

        width: 100vw;
        height: var(--height);


        background-size: cover;

    }

    .center-items {
        
        display: flex;
		align-items: center;
		justify-content: center;

    }

</style>
