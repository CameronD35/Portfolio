---
import "../styles/global.css"

interface Props {

    styleFlags?: Array<string>;
    href?: string;
    msg: string;

}

const {styleFlags = null, href = "/", msg} = Astro.props;

const styleString = styleFlags?.join(" ");

console.log(styleString);

---

<div class={`button ${styleString}`}>

    <a href={href}>

        <span>{msg}</span>

    </a>

</div>

<style>

    .button {

        background-color: var(--custom-white-t);
        backdrop-filter: var(--minor-blur);
        position: relative;

        /* border: 2px solid var(--custom-white-st); */

        padding: 1em 2em;
        border-radius: 1.25em;

        display: flex;
        justify-content: center;
        align-items: center;

        transition: 0.5s var(--standard-transition-timing-no-bounce);

    }

    .button a {

        height: 100%;
        width: 100%;

        text-decoration: none;
        color: var(--custom-black-st);

    }

    .button::after {

        content: '';
        position: absolute;
        width: 100%;
        height: 100%;
        border: 2px solid var(--custom-white-t);
        border-radius: calc(1.25em + 2px);

        opacity: 1;
        transition: 0.5s var(--standard-transition-timing-no-bounce);
        pointer-events: none;

    }

    .button:hover::after {

        scale: 1.5;

        filter: var(--BIG-blur);
        opacity: 0;


    }

    .button:hover {

        scale: 1.2;
        box-shadow: 0px 0px 20px var(--custom-black-t);
        

    }

    .fixed {

        position: absolute;

        bottom: 10%;

    }


    .big {

        font-size: 1.5em;
        font-weight: 700;

    }

    span {

        height: 100%;
        width: 100%;

    }

</style>

