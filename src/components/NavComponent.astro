---
interface Props {

    href?: string;
    title: string;
    isDropdown?: string;

}

const { href, title, isDropdown = "false" } = Astro.props;
import { Icon } from "astro-icon/components";
import Dropdown from "./Dropdown.astro";
---
<div class="nav-component">

    <a href={href} data-is-dropdown={isDropdown} data-title={title}>
        <span class="navLinkTitle">
            {title}
        </span>
        { (isDropdown === "true") && <Icon name="Dropdown_Arrow" class="arrow"/> }
    </a>
    { (isDropdown === "true") && <Dropdown/> }

</div>

<style>

    [data-is-dropdown="false"] {

        [data-icon] {

            display: none;

        }

    }


    .arrow {

        height: 0.375em;
        width: auto;

    }

    [data-is-dropdown="true"] {

        span::after {

            display: none;

        }

    }

</style>
